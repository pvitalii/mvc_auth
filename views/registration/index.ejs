<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" type="text/css" href="/styles/auth.styles.css">
  <link rel="stylesheet" type="text/css" href="/styles/global.css">
  <style>
    .checkbox-field-box {
      display: flex;
      justify-content: space-between;
    }
  </style>
</head>

<body>
  <div class="error-stack">
    <% if(typeof errors != "undefined") { %>
      <% errors.forEach((error) => { %>
        <div class="error"><%= error %></div>
      <% }) %> 
    <% } %>
  </div>
  <div class="auth-container" oni>
    <h1>REGISTRATION</h1>
    <% if(typeof body != "undefined") { %>
      <%- include("validated-reg-form") %>
    <% } else { %>
      <form action="registration" method="post" on>
        <div class="auth-content">
          <div class="field-box">
            <span>Email</span>
            <input type="email" name="email" placeholder="Email" required>
          </div>
          <div class="field-box">
            <span>Login</span>
            <input type="text" name="login" placeholder="Login" required>
          </div>
          <div class="field-box">
            <span>Real name</span>
            <input type="text" name="real_name" placeholder="Real name" required>
          </div>
          <div class="field-box">
            <span>Password</span>
            <input type="password" name="password" placeholder="Password" required>
          </div>
          <div class="field-box">
            <span>Birth date</span>
            <input type="date" name="birth_date" required>
          </div>
          <div class="field-box">
            <span>Country</span>
            <select name="countryId" required>
              <% if(typeof countries != "undefined") countries.forEach((country) => { %>
                <option value="<%= country.id %>"><%= country.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="checkbox-field-box">
            <label>Agree with terms and conditions</label>
            <input type="checkbox" name="agree_with_terms_and_conditions" required>
          </div>
          <input type="submit" value="Sign up">
          <p>Do you already have an account? <a href="login">Log in</a></p>
        </div>
      </form>
    <% } %>
  </div>

</body>

</html>