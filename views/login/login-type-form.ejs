<form action="" method="post" id="login-form" style="display: none;">
  <div class="auth-content">
    <div class="field-box">
      <span>Login</span>
      <% if(typeof body !="undefined") { %>
        <input type="text" name="login" placeholder="Login" id="login" required value="<%= body.login %>">
      <% } else { %>
        <input type="text" name="login" placeholder="Login" id="login" required>
      <% } %>
    </div>
    <div class="field-box">
      <span>Password</span>
      <input type="password" name="password" placeholder="Password" required>
    </div>
    <a href="#" onclick="switchLogintype()">Or you can switch login type</a>
    <input type="submit" value="Log in">
    <p>Don&#39;t have an account? <a href="registration">Sign up</a></p>
  </div>
</form>